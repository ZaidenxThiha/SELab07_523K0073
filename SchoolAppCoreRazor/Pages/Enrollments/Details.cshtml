@page
@model SchoolAppCoreRazor.Pages.Enrollments.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Grade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Course)
        </dt>
        <dd class="col-sm-10">
            @(Model.Enrollment.Course?.Title ?? string.Empty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Student)
        </dt>
        <dd class="col-sm-10">
            @(Model.Enrollment.Student is null ? string.Empty : $"{Model.Enrollment.Student.FirstName} {Model.Enrollment.Student.LastName}")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Enrollment.EnrollmentId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
